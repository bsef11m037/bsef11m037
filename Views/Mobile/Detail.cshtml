@model MobileEra.Models.mobile
@{
    string path = Model.Model + ".jpg";
}

<div class="row" style="margin-top:20px"> 
    <div class="col-lg-8 col-lg-offset-1">
        <div class="fb-like-box pull-right" data-href="https://www.facebook.com/MobileEra" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
        <a href="~/images/@path"  id="image1"><img src="~/images/@path" title="Click to zoom @Model.Model" class="thumbnail pull-left" style="width:auto;height:250px"/></a>        
        <script>
            document.write("<div class='fb-like' data-href=''"+ window.location.href +"data-layout='standard' data-action='like' data-show-faces='true' data-share='true'></div>");
        </script>
    </div>
</div>
<div class="row" style="margin-top:10px">
    <div class="col-lg-8 col-lg-push-1">
        
            <h4 style="color:#0996c4;"><strong>@Model.Made-@Model.Model Specs</strong></h4>
        
        <hr class="colorgraph" />
        <table class="table table-striped table-bordered" style="background-color:#bccddc;border:hidden">
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Made)</strong></td>
                <td>@Model.Made</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.OS)</strong></td>
                <td>@Model.OS</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Processor)</strong></td>
                <td>@Model.Processor</td>
            </tr>
            <tr>
                <td><strong>Screen Size</strong></td>
                <td>@Model.Screen_Size</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Battery)</strong></td>
                <td>@Model.Battery</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Camera)</strong></td>
                <td>@Model.Camera MP</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Others)</strong></td>
                <td>@Model.Others</td>
            </tr>
            <tr>
                <td><strong>@Html.DisplayNameFor(x=>x.Price)</strong></td>
                <td>@Model.Price Rs.</td>
            </tr>
        </table>        
        <h3>Comments</h3>
        <hr/>



        <script>
            document.write("<div class='fb-comments' data-href='" + window.location.href + "' data-numposts='15' data-colorscheme='light' data-width='100%'></div>");
        </script>
    </div>
</div>
