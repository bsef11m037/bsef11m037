
@model MobileEra.Models.user
@if (Session["user"] != null)
{
    <p>You Already Logged in @Session["user"]</p>
}
else
{

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-1">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h2>Welcome to Mobile Era</h2>
                        <hr class="colorgraph" />
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">                                                             
                        <p style="color:red">@ViewBag.error</p>
                        <form role="form" action="/account/LoginDone" method="post">                           
                                <div class="form-group">
                                    @Html.LabelFor(x=>x.Email)
                                    @Html.TextBoxFor(x => x.Email, new {@class="form-control",  placeholder = "Email" ,type="email" , focused=""})                                    
                                    @Html.ValidationMessageFor(x => x.Email, String.Empty, new { @class = "text text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x=>x.Password)
                                    @Html.TextBoxFor(x => x.Password, new {@class="form-control", placeholder = "Password" ,type="password"})
                                    @Html.ValidationMessageFor(x => x.Password, String.Empty, new { @class = "text text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" id="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Login" />                       
                        </form>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
