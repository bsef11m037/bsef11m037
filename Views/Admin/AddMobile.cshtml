

@model MobileEra.Models.mobile


<div class="row" style="margin-top: 10px">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Add Mobile</h2>
                <hr class="colorgraph" />
            </div>
            <div class="panel-body">
                <form role="form" action="/Admin/addMobileDone" method="post" enctype="multipart/form-data" class="form-horizontal">


                    
                    <div class="form-group bs-float-label">
                    @Html.LabelFor(x => x.Made, new { @class = "float-label" })
                        <select class="form-control float-input" id="Made" name="Made">
                            <option value="Nokia">Nokia</option>
                            <option value="Samsung">Samsung</option>
                            <option value="HTC">HTC</option>
                            <option value="Qmobile">QMobile</option>
                            <option value="Huawei">Huawei</option>
                            <option value="G'five">G'five</option> 
                            <option value="iOS">iOS</option>
                        </select>
                    </div>

                    @*<div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Made, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Made, new { @class = "form-control float-input", placeholder = "Made" })
                        @Html.ValidationMessageFor(x => x.Made, String.Empty, new { @class = "text text-danger has-error" })
                    </div>*@
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Model, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Model, new { @class = "form-control float-input", placeholder = "Model" })
                        @Html.ValidationMessageFor(x => x.Model, String.Empty, new { @class = "text text-danger has-error" })
                    </div>
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.OS, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.OS, new { @class = "form-control float-input", placeholder = "Operating System" })
                        @Html.ValidationMessageFor(x => x.OS, String.Empty, new { @class = "text text-danger" })
                    </div>
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Screen_Size, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Screen_Size, new { @class = "form-control float-input", placeholder = "Screen Size" })
                        @Html.ValidationMessageFor(x => x.Screen_Size, String.Empty, new { @class = "text text-danger has-error" })
                    </div>
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Price, new { @class = "float-label" })
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control float-input", placeholder = "Price" })
                            <span class="input-group-addon">Rs.</span>
                        </div>
                        @Html.ValidationMessageFor(x => x.Price, String.Empty, new { @class = "text text-danger has-error" })
                    </div>
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Processor, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Processor, new { @class = "form-control float-input", placeholder = "Processor" })
                        @Html.ValidationMessageFor(x => x.Processor, String.Empty, new { @class = "text text-danger has-error" })
                    </div>
                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Weight, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control float-input", placeholder = "Weight" })
                        @Html.ValidationMessageFor(x => x.Weight, String.Empty, new { @class = "text text-danger has-error" })
                    </div>

                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Battery, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Battery, new { @class = "form-control float-input", placeholder = "Batery Capacity" })
                        @Html.ValidationMessageFor(x => x.Battery, String.Empty, new { @class = "text text-danger has-error" })
                    </div>

                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Camera, new { @class = "float-label" })
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Camera, new { @class = "form-control  float-input", placeholder = "Enter Camera in MP" })
                            <span class="input-group-addon">MP</span>
                        </div>
                        @Html.ValidationMessageFor(x => x.Camera, String.Empty, new { @class = "text text-danger has-error" })
                    </div>

                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Rating, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Rating, new { @class = "form-control  float-input", placeholder = "Initial Rating" })
                        @Html.ValidationMessageFor(x => x.Rating, String.Empty, new { @class = "text text-danger has-error" })
                    </div>

                    <div class="form-group bs-float-label">
                        @Html.LabelFor(x => x.Others, new { @class = "float-label" })
                        @Html.TextBoxFor(x => x.Others, new { @class = "form-control  float-input", placeholder = "Others Info" })
                    </div>
                    

                    <!-- image-preview-filename input [start FROM HERE]-->
                    <div class="input-group image-preview">
                        <input type="text" class="form-control image-preview-filename" disabled="disabled">
                        <!-- don't give a name === doesn't send on POST/GET -->
                        <span class="input-group-btn">
                            <!-- image-preview-clear button -->
                            <button type="button" class="btn btn-default image-preview-clear" style="display: none;">
                                <span class="glyphicon glyphicon-remove"></span>Clear
                            </button>
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input">
                                <span class="glyphicon glyphicon-folder-open"></span>
                                <span class="image-preview-input-title">Browse</span>
                                <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview" />
                                <!-- rename it -->
                            </div>
                        </span>
                    </div><!-- /input-group image-preview [end HERE]--> 
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Add" />
                </form>
            </div>
        </div>
    </div>
</div>

